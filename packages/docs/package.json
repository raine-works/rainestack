{
	"name": "@rainestack/docs",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun run sync-docs && vite --port $TURBO_MFE_PORT",
		"build": "bun run sync-docs && vite build",
		"sync-docs": "mkdir -p public && cp -r ../../docs/*.md public/",
		"typecheck": "tsc --noEmit",
		"lint": "biome check ./src",
		"preview": "vite preview"
	},
	"dependencies": {
		"@rainestack/api": "workspace:*",
		"@rainestack/tools": "workspace:*",
		"@rainestack/ui": "workspace:*",
		"@tanstack/react-query": "catalog:",
		"lucide-react": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"react-router": "catalog:",
		"react-markdown": "catalog:",
		"remark-gfm": "catalog:",
		"rehype-raw": "catalog:",
		"rehype-sanitize": "catalog:",
		"rehype-slug": "catalog:",
		"rehype-autolink-headings": "catalog:"
	},
	"devDependencies": {
		"@rainestack/tsconfig": "workspace:*",
		"@tailwindcss/vite": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@vitejs/plugin-react": "catalog:",
		"babel-plugin-react-compiler": "catalog:",
		"tailwindcss": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:"
	}
}
